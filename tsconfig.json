{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "paths": {
      "@massless/shared": ["./packages/shared/src/index.ts"],
      "@massless/shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "apps/*/src/**/*.ts",
    "apps/*/src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
