{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "paths": {
      "@tenos/shared": ["../../../packages/shared/src"],
      "@tenos/shared/*": ["../../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"]
}
