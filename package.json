{
	"name": "tenos",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "bun run --filter '*' dev",
		"dev:client": "bun run --filter @tenos/client dev",
		"dev:server": "bun run --filter @tenos/server dev",
		"build": "bun run --filter @tenos/shared build && bun run --filter @tenos/client build && bun run --filter @tenos/server build",
		"build:client": "bun run --filter @tenos/client build",
		"build:server": "bun run --filter @tenos/server build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"typecheck": "bun run --filter '*' typecheck",
		"test": "bun run --filter '*' test",
		"test:e2e": "bunx playwright test",
		"copy:wasm": "bun scripts/copy-wasm.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@playwright/test": "^1.50.0",
		"typescript": "^5.7.0"
	}
}
