{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "warn"
			},
			"a11y": {
				"useSemanticElements": "off",
				"useKeyWithMouseEvents": "off",
				"useKeyWithClickEvents": "off",
				"useButtonType": "off"
			},
			"correctness": {
				"useJsxKeyInIterable": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"build",
			"*.wasm",
			"bun.lockb",
			"playwright-report",
			"apps/admin-center",
			"**/drizzle"
		]
	}
}
